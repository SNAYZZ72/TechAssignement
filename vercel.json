{
  "version": 2,
  "builds": [{
    "src": "TechAssigmentBadge/wsgi.py",
    "use": "vercel/python",
    "config": { "maxLambdaSize": "15mb"}
  },
  {
    "src": "TechAssigmentBadge/requirements.txt",
    "use": "@vercel/python-config"
  },
  {
    "src": "build_files.sh",
    "use": "@vercel/static-build",
    "config": { "distDir": "TechAssigmentBadge/static" },
  }],
  "routes": [
    {
        "src": "/static/(.*)",
        "dest": "TechAssigmentBadge/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "TechAssigmentBadge/wsgi.py"
    }
  ]
}